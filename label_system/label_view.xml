<?xml version="1.0"?>
<openerp>
    <data>
        <!--label.layout-->
        <record model="ir.ui.view" id="view_label_layout_form">
            <field name="name">label.layout.form</field>
            <field name="model">label.layout</field>
            <field name="arch" type="xml">
                <form string="Label layout" version="7.0">        
                    <sheet>
                        <group col="4" colspan="4">
                            <field name="code"/>
                            <field name="name" />

                            <field name="height" />
                            <field name="width" />
                            
                            <field name="right" />
                            <field name="left" />
                            
                            <field name="top" />
                            <field name="continue" />

                            <separator string="Note:" colspan="4"/>
                            <field name="note" nolabel="1" colspan="4"/>
                        </group>
                     </sheet>        
                  </form>
              </field>
          </record>                                          
        <record model="ir.ui.view" id="view_label_layout_tree">
            <field name="name">label.layout.tree</field>
            <field name="model">label.layout</field>
            <field name="arch" type="xml">
                <tree string="Label layout" colors="blue:continue==True">
                    <field name="continue" />
                    <field name="code"/>
                    <field name="name" />
                    <field name="height" />
                    <field name="width" />                    
                    <field name="right" />
                    <field name="left" />                    
                    <field name="top" />
                    <field name="note" />
                </tree>
            </field>
        </record>      
        <record model="ir.actions.act_window" id="action_label_layout">
            <field name="name">Label layout</field>
            <field name="res_model">label.layout</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_label_layout_tree"/>
            <field name="context">{}</field>
            <field name="domain">[]</field>
        </record>

        <record model="ir.ui.view" id="view_label_label_form">
            <field name="name">label.label.form</field>
            <field name="model">label.label</field>
            <field name="arch" type="xml">
                <form string="Label" version="7.0">        
                    <header>
                        <button name="test_report_label" string="Test label" type="object" attrs="{'invisible': [('report_id','=',False)]}" icon="gtk-print"/>
                        
                        <button string="Confirmed" name="trigger_draft_confirmed" type="workflow" states="draft" icon="STOCK_APPLY"/>
                        <button string="Disable" name="trigger_confirmed_disabled" type="workflow" states="confirmed" icon="gtk-no"/>
                        <button string="Enable" name="trigger_disabled_confirmed" type="workflow" states="disabled" icon="gtk-yes"/>
                        <field name="state" widget="statusbar" />
                    </header>
                    <sheet>
                        <group col="4" colspan="4">
                            <field name="code"/>
                            <field name="name" />
                            
                            <field name="type" />
                            <field name="filename" readonly="1"/>
                            
                            <field name="layout_id" />
                            <field name="report_id" readonly="1"/>

                            <field name="partner_id" />
                            <field name="parser" invisible="1"/>

                            <notebook colspan="4">
                                <page string="Extra info">
                                    <separator string="Description:" colspan="4"/>
                                    <field name="description" nolabel="1" colspan="4"/>

                                    <separator string="Note:" colspan="4"/>
                                    <field name="note" nolabel="1" colspan="4"/>
                                </page>
                                <page string="Fast label">
                                    <separator string="Fast label:" colspan="4"/>
                                    <field name="fast_ids" nolabel="1" colspan="4" context="{'form_embedded': True}"/>
                                </page>
                            </notebook>
                        </group>
                     </sheet>        
                  </form>
              </field>
          </record>                                          
                                    
        <record model="ir.ui.view" id="view_label_label_tree">
            <field name="name">label.label.tree</field>
            <field name="model">label.label</field>
            <field name="arch" type="xml">
                <tree string="Label" colors="red:report_id==False;grey:state=='disabled';blue:state=='draft';black:state=='confirmed'"> 
                    <field name="code"/>       
                    <field name="name" />
                    <field name="description"/>
                    <field name="filename"/>
                    <field name="layout_id" />                    
                    <field name="partner_id" />
                    <field name="report_id" />
                    <field name="type"/>
                    <field name="state" />
                    <button string="Confirmed" name="trigger_draft_confirmed" type="workflow" states="draft" icon="STOCK_APPLY"/>
                    <button string="Disable" name="trigger_confirmed_disabled" type="workflow" states="confirmed" icon="gtk-no"/>
                    <button string="Enable" name="trigger_disabled_confirmed" type="workflow" states="disabled" icon="gtk-yes"/>                        

                    <button name="test_report_label" string="Test label" type="object" attrs="{'invisible': [('report_id','=',False)]}" icon="gtk-print"/>
                </tree>
            </field>
        </record> 
        <record model="ir.ui.view" id="view_label_label_search">
            <field name="name">label.label.search</field>
            <field name="model">label.label</field>
            <field name="arch" type="xml">
                <search string="Label" version="7.0">
                    <field name="code"/>        
                    <field name="name" />
                    <field name="description"/>
                    <field name="filename"/>
                    <field name="partner_id" />
                    <field name="layout_id" />                    
                    <field name="type"/>
                    <field name="note"/>               

                    <filter name="state_draft" string="Draft state" domain="[('state','=','draft')]"/>
                    <filter name="state_confirmed" string="Confirmed state" domain="[('state','=','confirmed')]"/>
                    <filter name="state_disabled" string="Disabled state" domain="[('state','=','disabled')]"/>

                    <group expand="0" string="Group By...">
                        <filter name="group_type" string="Type" context="{'group_by': 'type'}"/>
                        <filter name="group_partner" string="Partner" context="{'group_by': 'partner_id'}"/>
                        <filter name="group_layout" string="Layout" context="{'group_by': 'layout_id'}"/>
                        <filter string="Status" context="{'group_by': 'state'}" />
                    </group>                
                </search>
            </field>
        </record>
             
        <record model="ir.actions.act_window" id="action_label_label">
            <field name="name">Label</field>
            <field name="res_model">label.label</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_label_label_tree"/>
            <field name="context">{}</field>
            <field name="domain">[('state', 'in', ('confirmed', 'draft'))]</field>
        </record>
        <record model="ir.actions.act_window" id="action_label_label_draft">
            <field name="name">Label to confirm</field>
            <field name="res_model">label.label</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_label_label_tree"/>
            <field name="context">{}</field>
            <field name="domain">[('state', '=', 'draft')]</field>
        </record>
        <record model="ir.actions.act_window" id="action_label_label_disabled">
            <field name="name">Label disabled</field>
            <field name="res_model">label.label</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_label_label_tree"/>
            <field name="context">{}</field>
            <field name="domain">[('state', '=', 'disabled')]</field>
        </record>
        
        <!--label.label.fast-->
        <record model="ir.ui.view" id="view_label_label_fast_form">
            <field name="name">label.label.fast.form</field>
            <field name="model">label.label.fast</field>
            <field name="arch" type="xml">
                <form string="Label fast" version="7.0">        
                    <header>
                        <button name="print_fast_label" string="Print" type="object" icon="gtk-print" />
                    </header>                    
                    <sheet>
                        <group col="4" colspan="4">
                            <field name="name" />
                            <field name="label_id" invisible="context.get('form_embedded', False)"/>
                            <field name="counter" />
                            <field name="multi" />
                            
                            <notebook colspan="4">
                                <page string="Link data">
                                    <group col="4" colspan="4">
                                        <field name="product_id" />
                                        <field name="partner_id" />
                                        <field name="order_id" />
                                        <field name="line_id" />
                                        <field name="mrp_id" />
                                    </group>
                                </page>
                                <page string="Force">
                                    <group col="4" colspan="4">
                                        <field name="force_name" />
                                        <field name="force_customer_name" />
                                        <field name="force_frame" />
                                        <field name="force_color" />
                                        <field name="force_canvas" />
                                        <field name="force_code" />
                                        <field name="force_customer_code" />
                                        <field name="force_codebar" />
                                        <field name="force_q_x_pack" />
                                    </group>
                                </page>
                                <page string="Static text">
                                    <group col="4" colspan="4">
                                        <field name="static_text1" />
                                        <field name="static_text2" />
                                        <field name="static_text3" />
                                    </group>
                                </page>
                                <page string="Production">
                                    <group col="4" colspan="4">
                                        <field name="line" />
                                        <field name="period" />
                                        <field name="order_ref" />
                                        <field name="order_date" />
                                        <field name="counter_pack_total" />
                                    </group>
                                </page>
                                <page string="Logo">
                                    <group col="4" colspan="4">
                                        <field name="with_company_logo" />
                                        <field name="with_customer_logo" />
                                        <field name="with_recycle_logo" />
                                        <field name="with_image_logo" />
                                        <field name="with_drawing_logo" />
                                    </group>
                                </page>
                            </notebook>
                        </group>
                     </sheet>        
                  </form>
              </field>
          </record>                                          
        <record model="ir.ui.view" id="view_label_label_fast_tree">
            <field name="name">label.label.fast.tree</field>
            <field name="model">label.label.fast</field>
            <field name="arch" type="xml">
                <tree string="Label fast">
                    <field name="name" />
                    <field name="label_id" invisible="context.get('form_embedded', False)"/>
                    <field name="counter" />
                    <field name="multi" />
                    
                    <field name="product_id" />
                    <field name="partner_id" />
                    <field name="order_id" />
                    <field name="line_id" />
                    <field name="mrp_id" />                    
                    <button name="print_fast_label" string="Print" type="object" icon="gtk-print"/>
                </tree>
            </field>
        </record>      
        <record model="ir.actions.act_window" id="action_label_label_fast_form">
            <field name="name">Fast label</field>
            <field name="res_model">label.label.fast</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_label_label_fast_tree"/>
            <field name="context">{}</field>
            <field name="domain">[]</field>
        </record>
        
        <menuitem 
            parent="base.menu_base_partner" 
            id="menu_label_label_root"
            name="Label management"
            sequence="30" 
            />
            <menuitem 
                parent="menu_label_label_root" 
                id="menu_label_label_active"
                action="action_label_label"
                sequence="10" 
                />
            <menuitem 
                parent="menu_label_label_root" 
                id="menu_label_label_fast"
                action="action_label_label_fast_form"
                sequence="20" 
                />
                
                <menuitem 
                    parent="menu_label_label_active" 
                    id="menu_label_label_draft"
                    action="action_label_label_draft"
                    sequence="10" 
                    />
                <menuitem 
                    parent="menu_label_label_active" 
                    id="menu_label_label_inactive"
                    action="action_label_label_disabled"
                    sequence="20" 
                    />
            <menuitem 
                parent="menu_label_label_root" 
                id="menu_label_label_configuration"
                sequence="99" 
                name="Configuration"
                />
                <menuitem 
                    parent="menu_label_label_configuration" 
                    id="menu_label_format"
                    action="action_label_layout"
                    sequence="10" 
                    />
    </data>
</openerp>

